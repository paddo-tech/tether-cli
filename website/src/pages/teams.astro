---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import CodeBlock from '../components/CodeBlock.astro';
import FeatureCard from '../components/FeatureCard.astro';
---

<BaseLayout title="Team Sync - Tether CLI" description="Share team configurations while keeping personal configs private with Tether's team sync feature">
  <Navbar />

  <main class="pt-16">
    <!-- Hero Section -->
    <section class="relative overflow-hidden py-20 lg:py-32">
      <div class="absolute inset-0 bg-gradient-to-br from-accent/10 via-transparent to-primary/10 pointer-events-none"></div>

      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center max-w-4xl mx-auto space-y-8">
          <div class="inline-block px-4 py-1 bg-accent/10 text-accent text-sm font-mono rounded-full border border-accent/30">
            Team Sync
          </div>

          <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold font-mono leading-tight">
            Share team configs,<br />
            <span class="gradient-text">keep secrets personal</span>
          </h1>

          <p class="text-xl text-muted leading-relaxed max-w-2xl mx-auto">
            Sync shared team configurations across your organization with automatic symlink management. Team configs seamlessly integrate with tools like Claude Code, while personal dotfiles stay encrypted.
          </p>

          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a href="#how-it-works" class="inline-flex items-center justify-center space-x-2 px-6 py-3 bg-primary hover:bg-primary/90 text-background rounded-lg transition-all font-mono font-semibold">
              <span>See How It Works</span>
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
              </svg>
            </a>
            <a href="/docs" class="inline-flex items-center justify-center space-x-2 px-6 py-3 bg-surface hover:bg-surface/80 text-text border border-surface rounded-lg transition-all font-mono">
              <span>Read Docs</span>
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Use Cases -->
    <section class="py-20 bg-surface/30">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <h2 class="text-3xl sm:text-4xl font-bold font-mono mb-4">
            Perfect for <span class="text-accent">growing teams</span>
          </h2>
          <p class="text-muted text-lg">One tool, two sync repositories</p>
        </div>

        <div class="grid md:grid-cols-2 gap-8">
          <!-- Team Repo -->
          <div class="bg-background rounded-xl p-8 border border-accent/30">
            <div class="text-4xl mb-4">üë•</div>
            <h3 class="text-2xl font-bold font-mono mb-4 text-accent">Team Repository</h3>
            <p class="text-muted mb-6">Shared, read-only configurations for everyone</p>

            <div class="space-y-3">
              <div class="flex items-start space-x-3">
                <svg class="w-5 h-5 text-success mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span class="text-sm text-muted">Editor configs (.editorconfig, .prettierrc)</span>
              </div>
              <div class="flex items-start space-x-3">
                <svg class="w-5 h-5 text-success mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span class="text-sm text-muted">Shared shell aliases and functions</span>
              </div>
              <div class="flex items-start space-x-3">
                <svg class="w-5 h-5 text-success mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span class="text-sm text-muted">Git aliases and configurations</span>
              </div>
              <div class="flex items-start space-x-3">
                <svg class="w-5 h-5 text-success mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span class="text-sm text-muted">Company-wide tool settings</span>
              </div>
            </div>

            <div class="mt-6 p-4 bg-surface rounded border border-accent/20">
              <div class="text-xs font-mono text-muted mb-2">team.zshrc</div>
              <pre class="text-xs text-accent font-mono overflow-x-auto"><code># Company aliases
alias deploy='./scripts/deploy.sh'
alias logs='kubectl logs -f'</code></pre>
            </div>
          </div>

          <!-- Personal Repo -->
          <div class="bg-background rounded-xl p-8 border border-primary/30">
            <div class="text-4xl mb-4">üîê</div>
            <h3 class="text-2xl font-bold font-mono mb-4 text-primary">Personal Repository</h3>
            <p class="text-muted mb-6">Private, encrypted, always takes priority</p>

            <div class="space-y-3">
              <div class="flex items-start space-x-3">
                <svg class="w-5 h-5 text-success mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span class="text-sm text-muted">Your personal shell configs (.zshrc)</span>
              </div>
              <div class="flex items-start space-x-3">
                <svg class="w-5 h-5 text-success mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span class="text-sm text-muted">Git config with your email & signing key</span>
              </div>
              <div class="flex items-start space-x-3">
                <svg class="w-5 h-5 text-success mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span class="text-sm text-muted">SSH keys, AWS credentials</span>
              </div>
              <div class="flex items-start space-x-3">
                <svg class="w-5 h-5 text-success mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span class="text-sm text-muted">Custom overrides of team configs</span>
              </div>
            </div>

            <div class="mt-6 p-4 bg-surface rounded border border-primary/20">
              <div class="text-xs font-mono text-muted mb-2">.zshrc (encrypted)</div>
              <pre class="text-xs text-primary font-mono overflow-x-auto"><code># Source team configs first
source ~/.tether/team-sync/team.zshrc

# Personal settings override</code></pre>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- How It Works -->
    <section id="how-it-works" class="py-20">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <h2 class="text-3xl sm:text-4xl font-bold font-mono mb-4">
            How team sync <span class="text-primary">works</span>
          </h2>
          <p class="text-muted text-lg">Three roles, automatic detection</p>
        </div>

        <div class="grid lg:grid-cols-3 gap-8">
          <!-- Step 1: Admin Setup -->
          <div class="space-y-4">
            <div class="w-16 h-16 bg-accent/10 rounded-full flex items-center justify-center border-2 border-accent">
              <span class="text-2xl font-bold font-mono text-accent">1</span>
            </div>
            <h3 class="text-xl font-bold font-mono">Team Admin Creates Repo</h3>
            <CodeBlock language="bash" code={`# Admin creates team repo
mkdir team-configs
cd team-configs

# Add team dotfiles
mkdir dotfiles
cat > dotfiles/team.zshrc << 'EOF'
alias deploy='./deploy.sh'
alias logs='kubectl logs -f'
EOF

git init && git push`} />
            <p class="text-muted text-sm">Admin pushes shared configs to private team repository</p>
          </div>

          <!-- Step 2: Team Member Setup -->
          <div class="space-y-4">
            <div class="w-16 h-16 bg-primary/10 rounded-full flex items-center justify-center border-2 border-primary">
              <span class="text-2xl font-bold font-mono text-primary">2</span>
            </div>
            <h3 class="text-xl font-bold font-mono">Members Add Team Sync</h3>
            <CodeBlock language="bash" code={`# Add team repository
tether team add git@github.com:company/team-configs.git

# Tether detects permissions
‚úì Read-only access detected
‚úì Team sync configured

# Auto-injects source line
Added to ~/.zshrc:
source ~/.tether/team-sync/team.zshrc`} />
            <p class="text-muted text-sm">Tether auto-detects Git permissions and configures accordingly</p>
          </div>

          <!-- Step 3: Automatic Sync -->
          <div class="space-y-4">
            <div class="w-16 h-16 bg-success/10 rounded-full flex items-center justify-center border-2 border-success">
              <span class="text-2xl font-bold font-mono text-success">3</span>
            </div>
            <h3 class="text-xl font-bold font-mono">Syncs Automatically</h3>
            <CodeBlock language="bash" code={`# Regular sync pulls both repos
tether sync

‚Ñπ Pulling latest changes...
‚úì Personal configs synced
‚Ñπ Pulling team configs...
‚úì Team configs updated

‚úì Sync complete!`} />
            <p class="text-muted text-sm">Team configs update automatically across all members</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Symlink Management -->
    <section class="py-20 bg-surface/30">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <h2 class="text-3xl sm:text-4xl font-bold font-mono mb-4">
            <span class="text-primary">Automatic</span> symlink management
          </h2>
          <p class="text-muted text-lg">Team configs seamlessly integrate with your tools</p>
        </div>

        <div class="max-w-5xl mx-auto space-y-8">
          <!-- Overview -->
          <div class="bg-background rounded-xl p-8 border border-primary/30">
            <h3 class="text-2xl font-bold font-mono mb-4 text-text">How Symlinks Work</h3>
            <p class="text-muted mb-6">
              Team configs are cloned to <code class="text-primary bg-surface px-2 py-1 rounded text-sm">~/.tether/team-sync/</code> and Tether automatically creates symlinks for individual files and subdirectories into the locations your tools expect. Your existing directories like <code class="text-primary bg-surface px-2 py-1 rounded text-sm">~/.claude/</code> are NOT replaced‚Äîteam items are symlinked alongside your personal files.
            </p>

            <div class="grid md:grid-cols-2 gap-6">
              <!-- Left: Directory Structure -->
              <div class="bg-surface p-6 rounded-lg border border-primary/20">
                <h4 class="font-mono font-semibold text-text mb-4">Team Repository Structure</h4>
                <CodeBlock language="bash" code={`# Your team repository
team-configs/
‚îú‚îÄ‚îÄ dotfiles/
‚îÇ   ‚îî‚îÄ‚îÄ team.zshrc
‚îî‚îÄ‚îÄ config-dirs/
    ‚îî‚îÄ‚îÄ .claude/
        ‚îî‚îÄ‚îÄ skills/
            ‚îú‚îÄ‚îÄ code-review/
            ‚îî‚îÄ‚îÄ team-testing/`} />
              </div>

              <!-- Right: After Sync -->
              <div class="bg-surface p-6 rounded-lg border border-accent/20">
                <h4 class="font-mono font-semibold text-text mb-4">After Team Sync</h4>
                <CodeBlock language="bash" code={`# Local filesystem
~/.tether/team-sync/
‚îî‚îÄ‚îÄ .claude/
    ‚îî‚îÄ‚îÄ skills/
        ‚îú‚îÄ‚îÄ code-review/
        ‚îî‚îÄ‚îÄ team-testing/

# Symlinks created in existing directory
~/.claude/skills/
‚îú‚îÄ‚îÄ personal-skill/     # Your existing skill
‚îú‚îÄ‚îÄ code-review ‚Üí ~/.tether/team-sync/.claude/skills/code-review/
‚îî‚îÄ‚îÄ team-testing ‚Üí ~/.tether/team-sync/.claude/skills/team-testing/`} />
              </div>
            </div>
          </div>

          <!-- Use Cases -->
          <div class="bg-background rounded-xl p-8 border border-accent/30">
            <h3 class="text-2xl font-bold font-mono mb-4 text-text">Perfect for Team Tools</h3>
            <p class="text-muted mb-6">
              Use symlinks to share configurations for development tools across your team:
            </p>

            <div class="grid md:grid-cols-3 gap-4">
              <div class="bg-surface p-4 rounded border border-surface">
                <div class="text-2xl mb-2">ü§ñ</div>
                <h4 class="font-mono font-semibold text-sm mb-2">Claude Code Skills</h4>
                <p class="text-xs text-muted">Share custom AI workflows</p>
                <code class="text-xs text-primary">~/.claude/</code>
              </div>

              <div class="bg-surface p-4 rounded border border-surface">
                <div class="text-2xl mb-2">üîß</div>
                <h4 class="font-mono font-semibold text-sm mb-2">VS Code Settings</h4>
                <p class="text-xs text-muted">Team editor configurations</p>
                <code class="text-xs text-primary">~/.vscode/</code>
              </div>

              <div class="bg-surface p-4 rounded border border-surface">
                <div class="text-2xl mb-2">‚öôÔ∏è</div>
                <h4 class="font-mono font-semibold text-sm mb-2">Tool Configs</h4>
                <p class="text-xs text-muted">Any config directory</p>
                <code class="text-xs text-primary">~/.config/</code>
              </div>
            </div>
          </div>

          <!-- How It Works -->
          <div class="bg-background rounded-xl p-8 border border-accent/30">
            <h3 class="text-2xl font-bold font-mono mb-4 text-text">Individual Item Symlinks</h3>
            <p class="text-muted mb-6">
              Tether symlinks individual files and subdirectories from the team repository into your existing directories. This means your personal items and team items coexist in the same parent directory.
            </p>

            <div class="space-y-4">
              <div class="flex items-start space-x-3">
                <div class="w-8 h-8 bg-success/10 rounded-full flex items-center justify-center flex-shrink-0">
                  <span class="text-success font-bold">1</span>
                </div>
                <div>
                  <h4 class="font-mono font-semibold text-text mb-1">Existing Directories Preserved</h4>
                  <p class="text-sm text-muted">Your <code class="text-primary bg-surface px-1 py-0.5 rounded text-xs">~/.claude/</code> directory already exists and remains unchanged</p>
                </div>
              </div>

              <div class="flex items-start space-x-3">
                <div class="w-8 h-8 bg-primary/10 rounded-full flex items-center justify-center flex-shrink-0">
                  <span class="text-primary font-bold">2</span>
                </div>
                <div>
                  <h4 class="font-mono font-semibold text-text mb-1">Team Items Added Inside</h4>
                  <p class="text-sm text-muted">Team repository has <code class="text-primary bg-surface px-1 py-0.5 rounded text-xs">.claude/skills/code-review/</code>, so Tether symlinks just that subdirectory into <code class="text-primary bg-surface px-1 py-0.5 rounded text-xs">~/.claude/skills/</code></p>
                </div>
              </div>

              <div class="flex items-start space-x-3">
                <div class="w-8 h-8 bg-accent/10 rounded-full flex items-center justify-center flex-shrink-0">
                  <span class="text-accent font-bold">3</span>
                </div>
                <div>
                  <h4 class="font-mono font-semibold text-text mb-1">Personal & Team Coexist</h4>
                  <p class="text-sm text-muted">Your <code class="text-primary bg-surface px-1 py-0.5 rounded text-xs">~/.claude/skills/</code> now contains both your personal skills AND the symlinked team skills</p>
                </div>
              </div>
            </div>

            <div class="mt-6 bg-accent/5 border border-accent/20 p-4 rounded">
              <p class="text-sm text-muted">
                <span class="font-semibold text-accent">Key Point:</span> Tether never replaces entire directories like <code class="text-primary bg-surface px-1 py-0.5 rounded text-xs">~/.claude/</code>. It only adds symlinks for individual items from the team repository into your existing directory structure.
              </p>
            </div>
          </div>

          <!-- Example Workflow -->
          <div class="bg-background rounded-xl p-8 border border-success/30">
            <h3 class="text-2xl font-bold font-mono mb-4 text-text">Example: Sharing Claude Code Skills</h3>

            <div class="space-y-6">
              <div>
                <h4 class="font-mono font-semibold text-text mb-3">Before Team Sync (Personal Setup)</h4>
                <CodeBlock language="bash" code={`# User already has personal skills
~/.claude/
‚îî‚îÄ‚îÄ skills/
    ‚îî‚îÄ‚îÄ personal-skill/
        ‚îî‚îÄ‚îÄ my-workflow.md`} />
              </div>

              <div>
                <h4 class="font-mono font-semibold text-text mb-3">Team Admin Creates Repository</h4>
                <CodeBlock language="bash" code={`# Create team repository
mkdir team-configs
cd team-configs

# Add Claude Code skills
mkdir -p config-dirs/.claude/skills/code-review
mkdir -p config-dirs/.claude/skills/team-testing

# Create team skills
cat > config-dirs/.claude/skills/code-review/deploy.md << 'EOF'
# Deploy Command
Run the deployment script for production
EOF

cat > config-dirs/.claude/skills/team-testing/test.md << 'EOF'
# Test Command
Run the test suite
EOF

# Push to team repository
git init && git add . && git commit -m "Add team skills"
git push`} />
              </div>

              <div>
                <h4 class="font-mono font-semibold text-text mb-3">Team Member Adds Team Sync</h4>
                <CodeBlock language="bash" code={`# Add team repository
tether team add git@github.com:company/team-configs.git

‚Ñπ Syncing team configs...
‚úì Team configs cloned to ~/.tether/team-sync/
‚úì Created symlink: ~/.claude/skills/code-review ‚Üí ~/.tether/team-sync/.claude/skills/code-review/
‚úì Created symlink: ~/.claude/skills/team-testing ‚Üí ~/.tether/team-sync/.claude/skills/team-testing/
‚úì Team sync complete!`} />
              </div>

              <div>
                <h4 class="font-mono font-semibold text-text mb-3">After Team Sync (Personal + Team)</h4>
                <CodeBlock language="bash" code={`# User now has both personal AND team skills
~/.claude/
‚îî‚îÄ‚îÄ skills/
    ‚îú‚îÄ‚îÄ personal-skill/          # Personal (unchanged)
    ‚îÇ   ‚îî‚îÄ‚îÄ my-workflow.md
    ‚îú‚îÄ‚îÄ code-review ‚Üí ~/.tether/team-sync/.claude/skills/code-review/    # Team symlink
    ‚îî‚îÄ‚îÄ team-testing ‚Üí ~/.tether/team-sync/.claude/skills/team-testing/  # Team symlink

# Claude Code sees all skills
claude --list-skills
Available skills:
  - personal-skill (personal)
  - code-review (team)
  - team-testing (team)`} />
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Access Modes -->
    <section class="py-20 bg-gradient-to-b from-surface/30 to-transparent">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <h2 class="text-3xl sm:text-4xl font-bold font-mono mb-4">
            <span class="text-accent">Smart</span> access control
          </h2>
          <p class="text-muted text-lg">Automatic permission detection based on Git repository access</p>
        </div>

        <div class="grid md:grid-cols-2 gap-8 max-w-5xl mx-auto">
          <!-- Read-Only Mode -->
          <div class="bg-surface rounded-xl p-8 border border-surface">
            <div class="flex items-center space-x-3 mb-6">
              <div class="text-3xl">üë§</div>
              <div>
                <h3 class="text-xl font-bold font-mono">Regular Team Members</h3>
                <span class="text-sm font-mono text-warning">Read-Only Mode</span>
              </div>
            </div>

            <div class="space-y-4">
              <p class="text-muted text-sm">Automatically configured when you have read-only Git access:</p>

              <div class="space-y-2">
                <div class="flex items-start space-x-2">
                  <span class="text-success mt-0.5">‚úì</span>
                  <span class="text-sm text-muted">Pull team configs automatically</span>
                </div>
                <div class="flex items-start space-x-2">
                  <span class="text-success mt-0.5">‚úì</span>
                  <span class="text-sm text-muted">Source team files from personal configs</span>
                </div>
                <div class="flex items-start space-x-2">
                  <span class="text-success mt-0.5">‚úì</span>
                  <span class="text-sm text-muted">Never push to team repository</span>
                </div>
              </div>

              <div class="mt-4 p-3 bg-background rounded border border-surface">
                <code class="text-xs font-mono text-muted">
                  Access Mode: Read-only
                </code>
              </div>
            </div>
          </div>

          <!-- Read-Write Mode -->
          <div class="bg-surface rounded-xl p-8 border border-primary/30">
            <div class="flex items-center space-x-3 mb-6">
              <div class="text-3xl">üë®‚Äçüíº</div>
              <div>
                <h3 class="text-xl font-bold font-mono">Team Admins</h3>
                <span class="text-sm font-mono text-success">Read-Write Mode</span>
              </div>
            </div>

            <div class="space-y-4">
              <p class="text-muted text-sm">Automatically detected when you have write Git access:</p>

              <div class="space-y-2">
                <div class="flex items-start space-x-2">
                  <span class="text-success mt-0.5">‚úì</span>
                  <span class="text-sm text-muted">Pull team configs automatically</span>
                </div>
                <div class="flex items-start space-x-2">
                  <span class="text-success mt-0.5">‚úì</span>
                  <span class="text-sm text-muted">Edit team configs directly</span>
                </div>
                <div class="flex items-start space-x-2">
                  <span class="text-success mt-0.5">‚úì</span>
                  <span class="text-sm text-muted">Push updates to team repository</span>
                </div>
              </div>

              <div class="mt-4 p-3 bg-background rounded border border-primary/20">
                <code class="text-xs font-mono text-primary">
                  Access Mode: Read-write (Admin)
                </code>
              </div>
            </div>
          </div>
        </div>

